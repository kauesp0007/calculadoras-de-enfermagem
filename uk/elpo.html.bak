        function createForm() {
          elpoData.forEach((item) => {
            const section = document.createElement("div");
            section.className = "criterion-section";

            const title = document.createElement("h3");
            title.className = "criterion-title";
            title.textContent = item.title;
            section.appendChild(title);

            const select = document.createElement("select");
            select.id = item.id;
            select.className = "criterion-select";
            select.innerHTML =
              `<option value="">Selecione uma op√ß√£o</option>` +
              item.options
                .map(
                  (opt) => `<option value="${opt.value}">${opt.text}</option>`,
                )
                .join("");
            section.appendChild(select);
            conteudoDiv.appendChild(section);
          });
        }

        function calcular() {
          let total = 0;
          let allSelected = true;

          elpoData.forEach((item) => {
            const select = document.getElementById(item.id);
            if (select.value === "") {
              allSelected = false;
            }
            total += parseInt(select.value || 0);
          });

          if (!allSelected) {
            resultadoDiv.innerHTML =
              '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione uma op√ß√£o para todos os itens.</strong>';
            resultadoDiv.className = "resultado bg-info-orange-light";
            resultadoDiv.style.display = "block";
            delete resultadoDiv.dataset.score;
            return;
          }

          let classificacao = "";
          let resultadoClasse = "";

          if (total >= 20) {
            classificacao = "Risco elevado para les√£o por press√£o";
            resultadoClasse = "bg-elpo-risco";
          } else {
            classificacao = "Risco baixo para les√£o por press√£o";
            resultadoClasse = "bg-elpo-sem-risco";
          }

          resultadoDiv.innerHTML = `
                <p>Pontua√ß√£o Total: <strong class="font-bold">${total}</strong></p>
                <p>Classifica√ß√£o: <strong class="font-bold">${classificacao}</strong></p>
            `;
          resultadoDiv.className = `resultado ${resultadoClasse}`;
          resultadoDiv.style.display = "block";
          resultadoDiv.dataset.score = `${total} (${classificacao})`;
          resultadoDiv.dataset.scaleName = "Escala ELPO";
        }

        function limpar() {
          document
            .querySelectorAll(".criterion-select")
            .forEach((select) => (select.selectedIndex = 0));
          resultadoDiv.innerHTML = "";
          resultadoDiv.className = "resultado hidden";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.scaleName;
        }

        createForm();
        btnCalcular?.addEventListener("click", calcular);
        btnLimpar?.addEventListener("click", limpar);

        btnGerarPDF?.addEventListener("click", () => {
          if (!resultadoDiv.dataset.score) {
            alert('Por favor, clique em "Calcular" primeiro para gerar o PDF.');
            return;
          }
          if (typeof gerarPDFGlobal === "function") {
            gerarPDFGlobal({
              titulo: "Escala de ELPO",
              subtitulo:
                "Relat√≥rio de Risco de Les√£o por Press√£o em Bloco Operat√≥rio",
              nomeArquivo: "relatorio_escala_elpo.pdf",
              seletorConteudo: ".main-content-wrapper",
            });
          } else {
            console.error("Fun√ß√£o gerarPDFGlobal n√£o definida.");
          }
        });

        btnNandaNicNoc?.addEventListener("click", () => {
          const score = resultadoDiv.dataset.score;
          const scaleName = resultadoDiv.dataset.scaleName;
          if (!score) {
            alert("Calcule o resultado para pesquisar a conduta.");
            return;
          }
          const searchQuery = encodeURIComponent(
            `${score} ${scaleName} gerar taxonomia de NANDA gerar taxonomia de NIC gerar Taxonomia de NOC`,
          );
          window.open(
            `https://www.google.com/search?q=${searchQuery}`,
