    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const resultadoDiv = document.getElementById('resultado');
            const btnCalcular = document.getElementById('btnCalcular');
            const btnLimpar = document.getElementById('btnLimpar');
            const btnGerarPDF = document.getElementById('btnGerarPDF');
            const btnNandaNicNoc = document.getElementById('btnNandaNicNoc');
            const conteudoDiv = document.getElementById('conteudo');
            
            const morseData = [
                {
                    criterion: "Hist√≥ria de quedas",
                    nameAttr: "historiaQuedas",
                    options: [
                        { text: "N√£o", score: 0 },
                        { text: "Sim", score: 25 }
                    ]
                },
                {
                    criterion: "Diagn√≥stico secund√°rio",
                    nameAttr: "diagnosticoSecundario",
                    options: [
                        { text: "N√£o", score: 0 },
                        { text: "Sim", score: 15 }
                    ]
                },
                {
                    criterion: "Aux√≠lio de deambula√ß√£o",
                    nameAttr: "auxilioDeambulacao",
                    options: [
                        { text: "Nenhum/Repouso no leito/Aux√≠lio de enfermagem", score: 0 },
                        { text: "Bengala/Cadeira de rodas/Enfermeira", score: 15 },
                        { text: "M√≥veis/Andador/Muleta", score: 30 }
                    ]
                },
                {
                    criterion: "Terapia IV/Heparina",
                    nameAttr: "terapiaIVHeparina",
                    options: [
                        { text: "N√£o", score: 0 },
                        { text: "Sim", score: 20 }
                    ]
                },
                {
                    criterion: "Marcha",
                    nameAttr: "marcha",
                    options: [
                        { text: "Normal/Repouso no leito/Im√≥vel", score: 0 },
                        { text: "Fraca", score: 10 },
                        { text: "Prejudicada", score: 20 }
                    ]
                },
                {
                    criterion: "Estado mental",
                    nameAttr: "estadoMental",
                    options: [
                        { text: "Orientado", score: 0 },
                        { text: "Esquece limita√ß√µes", score: 15 }
                    ]
                }
            ];

            // --- Fun√ß√µes da Calculadora Morse ---
            function updateScoreDisplay(criterionId) {
                const selectElement = document.getElementById(criterionId);
                const scoreDisplayElement = document.getElementById(`${criterionId}_score_display`);
                if (selectElement && scoreDisplayElement) {
                    scoreDisplayElement.innerText = selectElement.value === "" ? "0" : selectElement.value;
                }
            }

            function calcularPontuacaoMorse() {
                let total = 0;
                let allSelected = true;

                morseData.forEach(item => {
                    const selectElement = document.getElementById(item.nameAttr);
                    if (selectElement.value === "") {
                        allSelected = false;
                    } else {
                        total += parseInt(selectElement.value, 10);
                    }
                });

                resultadoDiv.style.display = 'block';
                if (!allSelected) {
                    resultadoDiv.innerHTML = '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione uma op√ß√£o para todos os itens</strong> antes de calcular.';
                    resultadoDiv.className = 'resultado bg-info-orange-light';
                    delete resultadoDiv.dataset.score;
                    return;
                }

                let risco = '';
                let conduta = '';
                let resultadoClasses = '';
                let riscoTexto = '';

                if (total >= 45) {
                    risco = 'Alto Risco';
                    conduta = 'Implementar interven√ß√µes preventivas rigorosas, como monitoramento cont√≠nuo, uso de alarmes de cama, e revis√£o da medica√ß√£o.';
                    resultadoClasses = 'bg-danger-red-light';
                } else if (total >= 25) {
                    risco = 'M√©dio Risco';
                    conduta = 'Implementar interven√ß√µes preventivas padr√£o, como educa√ß√£o do paciente, uso de cal√ßados antiderrapantes e aux√≠lio para deambula√ß√£o.';
                    resultadoClasses = 'bg-warning-yellow-light';
                } else { // 0 a 24
                    risco = 'Baixo Risco';
                    conduta = 'Manter monitoramento de rotina e ambiente seguro. Considerar a reavalia√ß√£o peri√≥dica do risco.';
                    resultadoClasses = 'bg-success-green-light';
                }

                resultadoDiv.innerHTML = `<p>Pontua√ß√£o total: <strong class="font-bold">${total}</strong></p><p>Risco de Queda: <strong class="font-bold">${risco}</strong></p><p>Conduta: <strong class="font-bold">${conduta}</strong></p>`;
                resultadoDiv.className = `resultado ${resultadoClasses}`;
                
                resultadoDiv.dataset.score = total;
                resultadoDiv.dataset.risco = risco;
                resultadoDiv.dataset.conduta = conduta;
                resultadoDiv.dataset.scaleName = "Escala de Queda de Morse";
            }

            function limparCamposMorse() {
                morseData.forEach(item => {
                    const selectElement = document.getElementById(item.nameAttr);
                    selectElement.selectedIndex = 0;
                    document.getElementById(`${item.nameAttr}_score_display`).innerText = '0';
                });
                resultadoDiv.innerHTML = '';
                resultadoDiv.className = 'resultado hidden';
                delete resultadoDiv.dataset.score;
                delete resultadoDiv.dataset.risco;
                delete resultadoDiv.dataset.conduta;
                delete resultadoDiv.dataset.scaleName;
            }
            
            // Preenche o formul√°rio dinamicamente
            morseData.forEach((item, index) => {
                const sectionDiv = document.createElement('div');
                sectionDiv.className = 'morse-criterion-card';
                
                const headerDiv = document.createElement('div');
                headerDiv.className = 'morse-criterion-header';

                const titleH3 = document.createElement('h3');
                titleH3.className = 'morse-criterion-title';
                titleH3.innerText = item.criterion;
                headerDiv.appendChild(titleH3);

                const scoreSpan = document.createElement('span');
                scoreSpan.className = 'morse-score-display';
                scoreSpan.id = `${item.nameAttr}_score_display`;
                scoreSpan.innerText = '0';
                headerDiv.appendChild(scoreSpan);
                
                sectionDiv.appendChild(headerDiv);

                const optionsDiv = document.createElement('div');
                optionsDiv.className = 'morse-criterion-options';

                const selectElement = document.createElement('select');
                selectElement.id = item.nameAttr;
                selectElement.className = 'morse-select';
                selectElement.onchange = () => updateScoreDisplay(item.nameAttr);

                const defaultOption = document.createElement('option');
                defaultOption.value = "";
                defaultOption.text = "Selecione...";
                defaultOption.disabled = true;
                defaultOption.selected = true;
                selectElement.appendChild(defaultOption);

                item.options.forEach(option => {
                    const optionElement = document.createElement('option');
                    optionElement.value = option.score;
                    optionElement.text = `${option.text} (${option.score})`;
                    selectElement.appendChild(optionElement);
                });

                optionsDiv.appendChild(selectElement);
                sectionDiv.appendChild(optionsDiv);
                conteudoDiv.appendChild(sectionDiv);
            });

            // Adiciona os event listeners aos bot√µes
            btnCalcular?.addEventListener('click', calcularPontuacaoMorse);
            btnLimpar?.addEventListener('click', limparCamposMorse);

            btnGerarPDF?.addEventListener('click', () => {
                if (!resultadoDiv.dataset.score) {
                    alert('Por favor, clique em "Calcular" primeiro para gerar o PDF.');
                    return;
                }
                if (typeof gerarPDFGlobal === 'function') {
                    gerarPDFGlobal({
                        titulo: 'Escala de Queda de Morse',
                        subtitulo: 'Relat√≥rio de Avalia√ß√£o do Risco de Queda',
                        nomeArquivo: 'relatorio_escala_morse.pdf',
                        seletorConteudo: '.main-content-wrapper'
                    });
                } else {
                    console.error('Fun√ß√£o gerarPDFGlobal n√£o definida.');
                }
            });
            
            btnNandaNicNoc?.addEventListener('click', () => {
                const score = resultadoDiv.dataset.score;
                const scaleName = resultadoDiv.dataset.scaleName;
                const risco = resultadoDiv.dataset.risco;
                if (!score || !risco) {
                    alert('Calcule o resultado para pesquisar a conduta.');
                    return;
                }
                const searchQuery = encodeURIComponent(`${scaleName} pontua√ß√£o ${score} risco ${risco} gerar taxonomia NANDA, gerar taxonomia NIC e gerar taxonomia de NOC`);
                window.open(`https://www.google.com/search?q=${searchQuery}`, '_blank');
            });
        });
    </script>





