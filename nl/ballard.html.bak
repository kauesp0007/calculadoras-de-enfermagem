        function calcularBallard() {
          let allSelected = true;
          let total = 0;
          document
            .querySelectorAll(".ballard-criterion-item")
            .forEach((el) => el.classList.remove("incomplete"));

          criteriaNames.forEach((name) => {
            const selected = document.querySelector(
              `input[name="${name}"]:checked`,
            );
            if (!selected) {
              allSelected = false;
              document
                .getElementById(`item-${name}`)
                .classList.add("incomplete");
            } else {
              total += Number(selected.value);
            }
          });

          resultadoDiv.style.display = "block";
          if (!allSelected) {
            resultadoDiv.innerHTML =
              '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione uma op√ß√£o para todos os itens destacados antes de calcular.</strong>';
            resultadoDiv.classList.add("bg-red-100");
            resultadoDiv.classList.remove("bg-blue-50");
            delete resultadoDiv.dataset.score;
            return;
          }

          const semanasFloat = 20 + total * 0.4;
          const semanas = Math.floor(semanasFloat);
          const dias = Math.round((semanasFloat - semanas) * 7);

          let classificacao = "";
          if (semanas < 37) classificacao = "Pr√©-termo";
          else if (semanas >= 37 && semanas < 42) classificacao = "A termo";
          else classificacao = "P√≥s-termo";

          let conduta = "";
          if (classificacao === "Pr√©-termo") {
            conduta =
              "Monitorar termorregula√ß√£o, glicemia e sinais de desconforto respirat√≥rio. Considerar suporte ventilat√≥rio e cuidados em unidade neonatal conforme necessidade.";
