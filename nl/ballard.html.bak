            conduta =
              "Cuidados neonatais de rotina; observar aleitamento e sinais vitais. Avaliar necessidades de triagem neonatal.";
          } else {
            conduta =
              "Avaliar sinais de p√≥s-maturidade (pele, glicemia, termorregula√ß√£o), observar risco de hip√≥xia e adaptabilidade neonatal.";
          }

          resultadoDiv.innerHTML = `
              <p>Escore total: <strong class="font-bold">${total}</strong></p>
              <p>Idade gestacional estimada: <strong class="font-bold">${semanas} semanas e ${dias} dias</strong></p>
              <p>Classifica√ß√£o: <strong class="font-bold">${classificacao}</strong></p>
              <p class="mt-4"><strong>Conduta sugerida:</strong> ${conduta}</p>
