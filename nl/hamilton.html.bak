        function createForm() {
          conteudoDiv.innerHTML = "";
          hamiltonData.forEach((itemGroup) => {
            const card = document.createElement("div");
            card.className = "criterion-card";
            card.innerHTML = `
                        <div class="criterion-title-container">
                            <h3 class="criterion-title">${itemGroup.item}</h3>
                            <p class="criterion-description">${itemGroup.instruction}</p>
                        </div>
                        <div class="options-container">
                            <select id="${itemGroup.nameAttr}-select" class="custom-select">
                                <option value="" disabled selected>Selecione...</option>
                                ${itemGroup.options.map((opt) => `<option value="${opt.score}">${opt.description} (${opt.score})</option>`).join("")}
                            </select>
                        </div>
                    `;
            conteudoDiv.appendChild(card);
          });
        }

        function calcularPontuacao() {
          let totalScore = 0;
          let allItemsSelected = true;

          hamiltonData.forEach((itemGroup) => {
            const select = document.getElementById(
              `${itemGroup.nameAttr}-select`,
            );
            if (select && select.value) {
              totalScore += parseInt(select.value, 10);
            } else {
              allItemsSelected = false;
            }
          });

          if (!allItemsSelected) {
            resultadoDiv.innerHTML =
              '⚠️ <strong class="font-bold">Por favor, selecione uma opção para cada item.</strong>';
            resultadoDiv.className = "standard-result-box bg-info-orange-light";
            resultadoDiv.style.display = "block";
            delete resultadoDiv.dataset.score;
            return;
          }

          let classificacao = "";
          if (totalScore <= 17) {
            classificacao = "Ansiedade Leve";
          } else if (totalScore <= 24) {
            classificacao = "Ansiedade Leve a Moderada";
          } else if (totalScore <= 30) {
            classificacao = "Ansiedade Moderada a Grave";
          } else {
            classificacao = "Ansiedade Grave";
          }

          resultadoDiv.innerHTML = `<p class="font-bold text-lg">Pontuação Total (HAM-A): <span class="font-black">${totalScore}</span></p><p class="font-bold text-lg">Classificação: <span class="font-black">${classificacao}</span></p>`;
          resultadoDiv.className = "standard-result-box";
          resultadoDiv.style.display = "block";
          resultadoDiv.dataset.score = totalScore;
          resultadoDiv.dataset.classificacao = classificacao;
        }

        function limparCampos() {
          createForm();
          resultadoDiv.innerHTML = "";
          resultadoDiv.className = "hidden";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.classificacao;
        }

        createForm();
        btnCalcular?.addEventListener("click", calcularPontuacao);
        btnLimpar?.addEventListener("click", limparCampos);
      });
    </script>

