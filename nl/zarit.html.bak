            alert("Calcule o resultado para pesquisar a conduta.");
            return;
          }
          let sobrecarga = "sem sobrecarga";
          if (score >= 22 && score <= 41) {
            sobrecarga = "sobrecarga leve a moderada";
          } else if (score >= 42 && score <= 60) {
            sobrecarga = "sobrecarga moderada a severa";
          } else if (score >= 61) {
            sobrecarga = "sobrecarga severa";
          }
          const searchQuery = encodeURIComponent(
            `cuidados enfermagem para cuidador com ${sobrecarga} segundo a Escala de Zarit NANDA NIC NOC`,
          );
          window.open(
            `https://www.google.com/search?q=${searchQuery}`,
            "_blank",
          );
