    <script src="global-scripts.js" defer=""></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const resultadoDiv = document.getElementById("resultado");
        const btnCalcular = document.getElementById("btnCalcular");
        const btnLimpar = document.getElementById("btnLimpar");
        const btnGerarPDF = document.getElementById("btnGerarPDF");
        const btnNandaNicNoc = document.getElementById("btnNandaNicNoc");
        const conteudoDiv = document.getElementById("conteudo");

        // Dados do Protocolo NEWS
        const newsData = [
          {
            parameter: "N√≠vel de Consci√™ncia",
            nameAttr: "consciencia",
            options: [
              { text: "√Ä voz / dor / n√£o responde", score: 3 },
              { text: "Alerta", score: 0 },
            ],
          },
          {
            parameter: "Temperatura (¬∞C)",
            nameAttr: "temperatura",
            options: [
              { text: "< 35.0", score: 3 },
              { text: "35.1 - 36.0", score: 1 },
              { text: "36.1 - 38.0", score: 0 },
              { text: "38.1 - 39.0", score: 1 },
              { text: "> 39.1", score: 2 },
            ],
          },
          {
            parameter: "Frequ√™ncia Card√≠aca (bpm)",
            nameAttr: "fc",
            options: [
              { text: "< 40", score: 3 },
              { text: "41 - 50", score: 1 },
              { text: "51 - 90", score: 0 },
              { text: "91 - 110", score: 1 },
              { text: "111 - 130", score: 2 },
              { text: "> 131", score: 3 },
            ],
          },
          {
            parameter: "PA Sist√≥lica (mmHg)",
            nameAttr: "pas",
            options: [
              { text: "< 90", score: 3 },
              { text: "91 - 100", score: 2 },
              { text: "101 - 110", score: 1 },
              { text: "111 - 219", score: 0 },
              { text: "> 220", score: 3 },
            ],
          },
          {
            parameter: "Frequ√™ncia Respirat√≥ria (ipm)",
            nameAttr: "fr",
            options: [
              { text: "< 8", score: 3 },
              { text: "9 - 11", score: 1 },
              { text: "12 - 20", score: 0 },
              { text: "21 - 24", score: 2 },
              { text: "> 25", score: 3 },
            ],
          },
          {
            parameter: "Satura√ß√£o de O¬≤ (%)",
            nameAttr: "satO2",
            options: [
              { text: "< 91", score: 3 },
              { text: "92 - 93", score: 2 },
              { text: "94 - 95", score: 1 },
              { text: "> 96", score: 0 },
            ],
          },
          {
            parameter: "Suplementa√ß√£o de O¬≤",
            nameAttr: "suplementacaoO2",
            options: [
              { text: "Sim", score: 2 },
              { text: "N√£o", score: 0 },
            ],
          },
        ];

        // --- Fun√ß√µes da Calculadora NEWS ---
        function updateScoreDisplay(criterionId) {
          const selectElement = document.getElementById(criterionId);
          const scoreDisplayElement = document.getElementById(
            `${criterionId}_score_display`,
          );
          if (selectElement && scoreDisplayElement) {
            scoreDisplayElement.innerText =
              selectElement.value === "" ? "0" : selectElement.value;
          }
        }

        function calcularNews() {
          let totalScore = 0;
          let allItemsSelected = true;

          newsData.forEach((item) => {
            const selectElement = document.getElementById(item.nameAttr);
            if (selectElement.value === "") {
              allItemsSelected = false;
            } else {
              totalScore += parseInt(selectElement.value, 10);
            }
          });

          resultadoDiv.style.display = "block";
          if (!allItemsSelected) {
            resultadoDiv.innerHTML =
              '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione uma op√ß√£o para cada item</strong> antes de calcular.';
            resultadoDiv.className = "resultado bg-info-orange-light";
            delete resultadoDiv.dataset.score;
            return;
          }

          let classificacao = "";
          let acaoRecomendada = "";
          let resultadoClasse = "";

          if (totalScore >= 7) {
            classificacao = "Alto";
            acaoRecomendada =
              "Acionar equipe m√©dica imediatamente e iniciar interven√ß√µes apropriadas. Monitoramento intensivo (Ex: a cada 5-15 min).";
            resultadoClasse = "bg-red-custom";
          } else if (totalScore >= 5) {
            classificacao = "Moderado";
            acaoRecomendada =
              "Reavaliar frequentemente (a cada 1-2 horas) e considerar apoio m√©dico. Risco de deteriora√ß√£o cl√≠nica.";
            resultadoClasse = "bg-yellow-custom";
          } else if (totalScore >= 1 && totalScore <= 4) {
            classificacao = "Baixo";
            acaoRecomendada = "Monitoramento regular (a cada 4-6 horas).";
            resultadoClasse = "bg-green-custom";
          } else if (totalScore === 0) {
            classificacao = "Muito Baixo";
            acaoRecomendada = "Monitoramento de rotina (a cada 12 horas).";
            resultadoClasse = "bg-green-custom";
          } else {
            classificacao = "Pontua√ß√£o inv√°lida";
            acaoRecomendada =
              "A pontua√ß√£o calculada est√° fora dos limites esperados da escala. Verifique as sele√ß√µes.";
            resultadoClasse = "bg-info-orange-light";
          }

          resultadoDiv.innerHTML = `<p>Pontua√ß√£o Total NEWS: <strong class="font-bold">${totalScore}</strong></p><p>Classifica√ß√£o: <strong class="font-bold">${classificacao}</strong></p><p>A√ß√£o Recomendada: <strong class="font-bold">${acaoRecomendada}</strong></p>`;
          resultadoDiv.className = `resultado ${resultadoClasse}`;

          resultadoDiv.dataset.score = totalScore;
          resultadoDiv.dataset.classificacao = classificacao;
          resultadoDiv.dataset.conduta = acaoRecomendada;
          resultadoDiv.dataset.scaleName = "Protocolo NEWS";
        }

        function limparCampos() {
          newsData.forEach((item) => {
            const selectElement = document.getElementById(item.nameAttr);
            selectElement.selectedIndex = 0;
            document.getElementById(
              `${item.nameAttr}_score_display`,
            ).innerText = "0";
          });
          resultadoDiv.innerHTML = "";
          resultadoDiv.className = "resultado hidden";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.classificacao;
          delete resultadoDiv.dataset.conduta;
          delete resultadoDiv.dataset.scaleName;
        }

        // Preenche o formul√°rio dinamicamente
        newsData.forEach((item, index) => {
          const sectionDiv = document.createElement("div");
          sectionDiv.className = "news-criterion-card";

          const headerDiv = document.createElement("div");
          headerDiv.className = "news-criterion-header";

          const titleH3 = document.createElement("h3");
          titleH3.className = "news-criterion-title";
          titleH3.innerText = item.parameter;
          headerDiv.appendChild(titleH3);

          const scoreSpan = document.createElement("span");
          scoreSpan.className = "news-score-display";
          scoreSpan.id = `${item.nameAttr}_score_display`;
          scoreSpan.innerText = "0";
          headerDiv.appendChild(scoreSpan);

          sectionDiv.appendChild(headerDiv);

          const optionsDiv = document.createElement("div");
          optionsDiv.className = "news-criterion-options";

          const selectElement = document.createElement("select");
          selectElement.id = item.nameAttr;
          selectElement.className = "news-select";
          selectElement.onchange = () => updateScoreDisplay(item.nameAttr);

          const defaultOption = document.createElement("option");
          defaultOption.value = "";
          defaultOption.text = "Selecione...";
          defaultOption.disabled = true;
          defaultOption.selected = true;
          selectElement.appendChild(defaultOption);

          item.options.forEach((option) => {
            const optionElement = document.createElement("option");
            optionElement.value = option.score;
            optionElement.text = `${option.text} (${option.score})`;
            selectElement.appendChild(optionElement);
          });

          optionsDiv.appendChild(selectElement);
          sectionDiv.appendChild(optionsDiv);
          conteudoDiv.appendChild(sectionDiv);
        });

        // Adiciona os event listeners aos bot√µes
        btnCalcular?.addEventListener("click", calcularNews);
        btnLimpar?.addEventListener("click", limparCampos);

        btnGerarPDF?.addEventListener("click", () => {
          if (!resultadoDiv.dataset.score) {
            alert('Por favor, clique em "Calcular" primeiro para gerar o PDF.');
            return;
          }
          if (typeof gerarPDFGlobal === "function") {
            gerarPDFGlobal({
              titulo: "Protocolo NEWS",
              subtitulo: "Relat√≥rio de Escore de Alerta Precoce",
              nomeArquivo: "protocolo_news.pdf",
              seletorConteudo: ".main-content-wrapper",
            });
          } else {
            console.error("Fun√ß√£o gerarPDFGlobal n√£o definida.");
          }
        });

        btnNandaNicNoc?.addEventListener("click", () => {
          const score = resultadoDiv.dataset.score;
          const scaleName = resultadoDiv.dataset.scaleName;
          const classificacao = resultadoDiv.dataset.classificacao;
          const conduta = resultadoDiv.dataset.conduta;
          if (!score || !classificacao) {
            alert("Calcule o resultado para pesquisar a conduta.");
            return;
          }
          const searchQuery = encodeURIComponent(
            `${scaleName} pontua√ß√£o ${score} classifica√ß√£o ${classificacao} gerar taxonomia NANDA, gerar taxonomia NIC e gerar taxonomia de NOC`,
          );
          window.open(
            `https://www.google.com/search?q=${searchQuery}`,
            "_blank",
          );
        });
      });
    </script>

    <script src="/lang-selector.js" defer=""></script>

