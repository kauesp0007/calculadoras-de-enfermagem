    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const resultadoDiv = document.getElementById("resultado");
        const btnCalcular = document.getElementById("btnCalcular");
        const btnLimpar = document.getElementById("btnLimpar");
        const btnGerarPDF = document.getElementById("btnGerarPDF");
        const btnNandaNicNoc = document.getElementById("btnNandaNicNoc");
        const tabelaRASS = document.getElementById("tabelaRASS");
        let scoreSelecionado = null;
        let interpretacaoSelecionada = null;

        // Dados da escala de Richmond
        const rassData = [
          {
            score: "+4",
            description:
              "Muito agitado: Agressivo, perigoso para si e para os outros.",
          },
          {
            score: "+3",
            description:
              "Agitado: Puxa ou remove tubos/cateteres, comportamento combativo.",
          },
          {
            score: "+2",
            description:
              "Muito inquieto: Movimentos frequentes e descoordenados, sem agressividade.",
          },
          {
            score: "+1",
            description: "Inquieto: Ansioso, com movimentos n√£o agressivos.",
          },
          { score: "0", description: "Alerta e calmo: Estado ideal." },
          {
            score: "-1",
            description:
              "Sonolento: Acorda por >10s, contato visual sustentado.",
          },
          { score: "-2", description: "Seda√ß√£o leve: Contato visual breve." },
          {
            score: "-3",
            description: "Seda√ß√£o moderada: Movimenta-se sem contato visual.",
          },
          {
            score: "-4",
            description: "Seda√ß√£o profunda: Reage a est√≠mulo doloroso.",
          },
          {
            score: "-5",
            description: "Sem resposta: Nenhuma resposta a est√≠mulos.",
          },
        ];

        // Adiciona event listeners para a sele√ß√£o das linhas da tabela
        tabelaRASS?.addEventListener("click", function (e) {
          const targetRow = e.target.closest("tr");
          if (targetRow) {
            tabelaRASS
              .querySelectorAll("tr")
              .forEach((row) => row.classList.remove("selected"));
            targetRow.classList.add("selected");
            scoreSelecionado = targetRow.getAttribute("data-score");
            interpretacaoSelecionada = targetRow.cells[1].textContent.trim();
          }
        });

        function calcularRASS() {
          if (scoreSelecionado === null) {
            resultadoDiv.innerHTML =
              '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione um n√≠vel da escala</strong> antes de continuar.';
            resultadoDiv.className = "resultado bg-info-orange-light";
            resultadoDiv.style.display = "block";
            delete resultadoDiv.dataset.score;
            return;
          }

          let resultadoClasses = "";
          if (parseInt(scoreSelecionado) >= 2) {
            resultadoClasses = "bg-danger-red-light";
          } else if (
            parseInt(scoreSelecionado) >= -3 &&
            parseInt(scoreSelecionado) <= 1
          ) {
            resultadoClasses = "bg-warning-yellow-light";
          } else {
            // Score -4 ou -5
            resultadoClasses = "bg-danger-red-light";
          }

          resultadoDiv.innerHTML = `<p>Pontua√ß√£o RASS: <strong class="font-bold">${scoreSelecionado}</strong></p><p>Interpreta√ß√£o: <strong class="font-bold">${interpretacaoSelecionada}</strong></p>`;
          resultadoDiv.className = `resultado ${resultadoClasses}`;
          resultadoDiv.style.display = "block";

          resultadoDiv.dataset.score = scoreSelecionado;
          resultadoDiv.dataset.classificacao = interpretacaoSelecionada;
          resultadoDiv.dataset.scaleName = "Escala de Richmond (RASS)";
        }

        function limparCampos() {
          tabelaRASS
            .querySelectorAll("tr")
            .forEach((row) => row.classList.remove("selected"));
          scoreSelecionado = null;
          interpretacaoSelecionada = null;
          resultadoDiv.innerHTML = "";
          resultadoDiv.className = "resultado hidden";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.classificacao;
          delete resultadoDiv.dataset.scaleName;
        }

        btnCalcular?.addEventListener("click", calcularRASS);
        btnLimpar?.addEventListener("click", limparCampos);

        btnGerarPDF?.addEventListener("click", () => {
          if (!resultadoDiv.dataset.score) {
            alert('Por favor, clique em "Calcular" primeiro para gerar o PDF.');
            return;
          }
          if (typeof gerarPDFGlobal === "function") {
            gerarPDFGlobal({
              titulo: "Escala de Richmond (RASS)",
              subtitulo: "Relat√≥rio de Avalia√ß√£o de Agita√ß√£o e Seda√ß√£o",
              nomeArquivo: "relatorio_escala_richmond.pdf",
              seletorConteudo: ".main-content-wrapper",
            });
          } else {
            console.error("Fun√ß√£o gerarPDFGlobal n√£o definida.");
          }
        });

        btnNandaNicNoc?.addEventListener("click", () => {
          const score = resultadoDiv.dataset.score;
          const scaleName = resultadoDiv.dataset.scaleName;
          const classificacao = resultadoDiv.dataset.classificacao;
          if (!score || !classificacao) {
            alert("Calcule o resultado para pesquisar a conduta.");
            return;
          }
          const searchQuery = encodeURIComponent(
            `${scaleName} pontua√ß√£o ${score} classifica√ß√£o ${classificacao} gerar taxonomia NANDA, gerar taxonomia NIC e gerar taxonomia de NOC`,
          );
          window.open(
            `https://www.google.com/search?q=${searchQuery}`,
            "_blank",
          );
        });
      });
    </script>

