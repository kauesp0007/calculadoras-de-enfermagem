              },
            ],
          },
        ];

        function createForm() {
          conteudoDiv.innerHTML = "";
          fourData.forEach((criterion) => {
            const card = document.createElement("div");
            card.className = "criterion-card";
            card.innerHTML = `
                    <h3 class="criterion-title">${criterion.category}</h3>
                    <div class="options-container">
                        <select id="${criterion.nameAttr}-select" class="custom-select">
                            <option value="" disabled selected>Selecione...</option>
                            ${criterion.options.map((opt) => `<option value="${opt.score}">${opt.description} (${opt.score})</option>`).join("")}
                        </select>
                    </div>
                `;
            conteudoDiv.appendChild(card);
          });
        }

        function calcularPontuacao() {
          let total = 0;
          let allCategoriesSelected = true;

          fourData.forEach((categoryData) => {
            const select = document.getElementById(
              `${categoryData.nameAttr}-select`,
            );
            if (select && select.value) {
              total += parseInt(select.value, 10);
            } else {
              allCategoriesSelected = false;
            }
          });

          if (!allCategoriesSelected) {
            resultadoDiv.innerHTML =
              '‚ö†Ô∏è <strong class="font-bold">Por favor, selecione uma op√ß√£o para todas as categorias.</strong>';
            resultadoDiv.className = "standard-result-box bg-info-orange-light";
            resultadoDiv.style.display = "block";
            delete resultadoDiv.dataset.score;
            return;
          }

          let classificacao = "";
          if (total === 16) {
            classificacao = "Consci√™ncia Normal";
          } else if (total >= 13) {
            classificacao = "D√©ficit neurol√≥gico leve";
          } else if (total >= 8) {
            classificacao = "D√©ficit neurol√≥gico moderado";
          } else if (total >= 4) {
            classificacao = "D√©ficit neurol√≥gico grave";
          } else {
            classificacao =
              "D√©ficit neurol√≥gico muito grave. Poss√≠vel morte encef√°lica.";
          }

          resultadoDiv.innerHTML = `<p class="font-bold text-lg">Pontua√ß√£o total FOUR: <span class="font-black">${total}</span></p><p class="font-bold text-lg">Classifica√ß√£o: <span class="font-black">${classificacao}</span></p>`;
          resultadoDiv.className = `standard-result-box`;
          resultadoDiv.style.display = "block";

          resultadoDiv.dataset.score = total;
          resultadoDiv.dataset.classificacao = classificacao;
        }

        function limparCampos() {
          createForm();
          resultadoDiv.innerHTML = "";
          resultadoDiv.className = "hidden";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.classificacao;
        }

        createForm();
        btnCalcular?.addEventListener("click", calcularPontuacao);
        btnLimpar?.addEventListener("click", limparCampos);
      });
    </script>

