            <li>Hill-Rodriguez, D. và cộng sự. Thang đo Humpty Dumpty Falls: một
nghiên cứu đối chứng.<a href="https://doi.org/10.1111/j.1744-6155.2008.00166.x" target="_blank" rel="noopener noreferrer" class="text-light-blue hover:underline">Tạp chí Điều dưỡng Nhi khoa</a>, 2009.</li>
            <li>COREN, C. G. và cộng sự. Thang đo Humpty Dumpty: thích ứng và kiểm định đa văn hóa cho văn hóa Brazil.<a href="https://acta-ape.org/article/escala-humpty-dumpty-adaptacao-transcultural-e-validacao-para-cultura-brasileira/" target="_blank" rel="noopener noreferrer" class="text-light-blue hover:underline">Acta Paul Enferm</a>, 2023.</li>
          </ul>
        </div>
      </div>
    </main>

    <script src="global-scripts.js" defer=""></script>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const resultadoDiv = document.getElementById("resultado");
        const btnCalcular = document.getElementById("btnCalcular");
        const btnLimpar = document.getElementById("btnLimpar");
        const btnGerarPDF = document.getElementById("btnGerarPDF");
        const btnNandaNicNoc = document.getElementById("btnNandaNicNoc");
        const conteudoDiv = document.getElementById("conteudo");

        // Dados da escala de Humpty Dumpty
        const humptyData = [
          {
            category: "Idade",
            nameAttr: "idade",
            options: [
              { description: "≥ 13 anos", score: 1 },
              { description: "7-12 anos", score: 2 },
              { description: "3-6 anos", score: 3 },
              { description: "< 3 anos", score: 4 },
            ],
            explain:
              "A idade é um fator importante de risco de queda, com crianças menores sendo mais vulneráveis.",
          },
          {
            category: "Sexo",
            nameAttr: "sexo",
            options: [
              { description: "Feminino", score: 1 },
              { description: "Masculino", score: 2 },
            ],
            explain: "O sexo masculino pode ter um risco ligeiramente maior.",
          },
          {
            category: "Diagnóstico",
            nameAttr: "diagnostico",
            options: [
              { description: "Outros diagnósticos", score: 1 },
              { description: "Transtornos psíquicos", score: 2 },
              {
                description:
                  "Alteração na oxigenação (respiratório, desidratação, anemia)",
                score: 3,
              },
              { description: "Neurológico", score: 4 },
            ],
            explain: "Alguns diagnósticos aumentam a predisposição a quedas.",
          },
          {
            category: "Deficiências Cognitivas",
            nameAttr: "cognitivas",
            options: [
              {
                description: "Orientado de acordo com suas capacidades",
                score: 1,
              },
              { description: "Esquece suas limitações", score: 2 },
              { description: "Não consciente de suas limitações", score: 3 },
            ],
            explain:
              "A capacidade de reconhecer limitações e riscos afeta a probabilidade de quedas.",
          },
          {
            category: "Fatores Ambientais",
            nameAttr: "ambientais",
            options: [
              { description: "Criança que deambula", score: 1 },
              { description: "Criança acamada", score: 2 },
              {
                description:
                  "Faz uso de aparelho auxiliar, berço/cama com muitos equipamentos, pouca iluminação",
                score: 3,
              },
              { description: "História de queda anterior", score: 4 },
            ],
            explain:
              "O ambiente hospitalar e o histórico do paciente são relevantes para o risco de queda.",
          },
          {
            category: "Uso de Medicação",
            nameAttr: "medicacao",
            options: [
              {
                description: "Faz uso de outros medicamentos ou não usa",
                score: 1,
              },
              {
                description:
                  "Faz uso de 1 dos seguintes: sedativos, hipnóticos, narcóticos",
                score: 2,
              },
              {
                description:
                  "Faz uso de ≥ 2 dos seguintes: sedativos, hipnóticos, narcóticos",
                score: 3,
              },
            ],
            explain:
              "Certos medicamentos afetam a consciência e o equilíbrio, aumentando o risco.",
          },
          {
            category: "Cirurgia / Sedação / Anestesia",
            nameAttr: "cirurgia",
            options: [
              { description: "Há mais de 48h ou nenhum", score: 1 },
              { description: "Há 48h", score: 2 },
              { description: "Há 24h", score: 3 },
            ],
            explain:
              "O período pós-procedimento é de maior risco devido aos efeitos residuais.",
          },
        ];

        // Preenche o formulário dinamicamente
        humptyData.forEach((item) => {
          const sectionDiv = document.createElement("div");
          sectionDiv.className = "humpty-criterion-section";
          sectionDiv.id = `section-${item.nameAttr}`;

          const titleH3 = document.createElement("h3");
          titleH3.className = "humpty-criterion-title";
          titleH3.innerHTML =
            item.category +
            `
              <div class="text-sm font-normal text-gray-500 mt-1">${item.explain}</div>`;
          sectionDiv.appendChild(titleH3);

          const selectElement = document.createElement("select");
          selectElement.id = item.nameAttr;
          selectElement.className = "humpty-criterion-select";

          const defaultOption = document.createElement("option");
          defaultOption.value = "";
          defaultOption.text = "Selecione...";
          selectElement.appendChild(defaultOption);

          item.options.forEach((option) => {
            const optionElement = document.createElement("option");
            optionElement.value = option.score;
            optionElement.text = `${option.description} (pontos: ${option.score})`;
            selectElement.appendChild(optionElement);
          });

          sectionDiv.appendChild(selectElement);
          conteudoDiv.appendChild(sectionDiv);
        });

        function calcularHumpty() {
          const selects = document.querySelectorAll("#conteudo select");
          let allSelected = true;
          let total = 0;

          selects.forEach((select) => {
            if (select.value === "") {
              allSelected = false;
              select.classList.add("incomplete");
            } else {
              select.classList.remove("incomplete");
              total += Number(select.value);
            }
          });

          resultadoDiv.style.display = "block";
          if (!allSelected) {
            resultadoDiv.innerHTML =
              '⚠️ <strong class="font-bold">Por favor, selecione uma opção para todos os itens antes de calcular.</strong>';
            resultadoDiv.style.display = "block";
            delete resultadoDiv.dataset.score;
            return;
          }

          let classificacao = "";
          let recomendacao = "";

          // Definições de pontuação conforme a documentação
          // Baixo Risco: 7-11 pontos
          // Alto Risco: 12-22 pontos
          if (total >= 7 && total <= 11) {
            classificacao = "Baixo Risco";
            recomendacao =
              "A criança tem baixo risco de queda. Continue com as medidas preventivas padrão e reavalie periodicamente.";
          } else if (total >= 12 && total <= 22) {
            classificacao = "Alto Risco";
            recomendacao =
              "A criança tem alto risco de queda. Implemente imediatamente as medidas de prevenção de quedas para pacientes pediátricos.";
          } else {
            classificacao = "Pontuação Fora do Padrão";
            recomendacao =
              "A pontuação calculada está fora da faixa de classificação esperada. Verifique os valores selecionados.";
          }

          resultadoDiv.innerHTML = `
                <p>Escore total: <strong class="font-bold">${total}</strong></p>
                <p>Classificação: <strong class="font-bold">${classificacao}</strong></p>
                <p class="mt-4"><strong>Recomendação:</strong> ${recomendacao}</p>
            `;
          resultadoDiv.style.display = "block";

          resultadoDiv.dataset.score = total;
          resultadoDiv.dataset.scaleName = "Escala de Queda Humpty Dumpty";
          resultadoDiv.dataset.classificacao = classificacao;
        }

        function limparCampos() {
          const selects = document.querySelectorAll("#conteudo select");
          selects.forEach((select) => {
            select.selectedIndex = 0;
            select.classList.remove("incomplete");
          });
          resultadoDiv.innerHTML = "";
          resultadoDiv.style.display = "none";
          delete resultadoDiv.dataset.score;
          delete resultadoDiv.dataset.scaleName;
          delete resultadoDiv.dataset.classificacao;
        }

        btnCalcular?.addEventListener("click", calcularHumpty);
        btnLimpar?.addEventListener("click", limparCampos);

        btnGerarPDF?.addEventListener("click", () => {
          if (!resultadoDiv.dataset.score) {
            alert(
              'Por favor, clique em "Calcular Escore" primeiro para gerar o PDF.',
            );
            return;
          }
          if (typeof gerarPDFGlobal === "function") {
            gerarPDFGlobal({
              titulo: "Escala de Queda Humpty Dumpty",
              subtitulo: "Relatório de Avaliação de Risco de Queda",
              nomeArquivo: "relatorio_escala_humpty_dumpty.pdf",
              seletorConteudo: ".main-content-wrapper",
            });
          } else {
            console.error("Função gerarPDFGlobal não definida.");
          }
        });

        btnNandaNicNoc?.addEventListener("click", () => {
          const score = resultadoDiv.dataset.score;
          const scaleName = resultadoDiv.dataset.scaleName;
          const classificacao = resultadoDiv.dataset.classificacao;
          if (!score || !classificacao) {
            alert("Calcule o resultado para pesquisar a conduta.");
            return;
          }
          const searchQuery = encodeURIComponent(
            `${scaleName} pontuação ${score} paciente pediátrico ${classificacao} gerar taxonomia NANDA, gerar taxonomia NIC e gerar taxonomia de NOC`,
          );
          window.open(
            `https://www.google.com/search?q=${searchQuery}`,
            "_blank",
          );
        });
      });
    </script>

    <script src="/lang-selector.js" defer=""></script>

    <div id="footer-placeholder"></div>
    <script>
      fetch("footer.html") // 1. Busca o arquivo
        .then((response) => response.text()) // 2. Converte a resposta para texto (HTML)
        .then((data) => {
          // 3. Insere o HTML dentro do seu placeholder
          document.getElementById("footer-placeholder").innerHTML = data;
        });
    </script>
  

</body></html>